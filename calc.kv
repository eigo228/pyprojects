

<Container>: 
	

	button7: button7
	button8: button8
	button9: button9

	button4: button4
	button5: button5
	button6: button6

	button1: button1
	button2: button2
	button3: button3 

	button0: button0
	button_dot: button_dot
	button_slash: button_slash
	button_bs: button_bs

	button_star: button_star
	button_minus: button_minus
	button_plus: button_plus
	button_res: button_res

	lebel: lebel

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:

			size_hint: 1, 0.4

			Label:
				text_size: (270-20, 585 * .4 - 50)
				halign: "right"
				valign: "center"
				pos_hint: {"center_x": 0.9, "top":0.5} 
				id: lebel
				text: "0"
				font_size: "40"
				size_hint: 1, 0.3
			

		BoxLayout:

			GridLayout:
				size_hint: 0.8, 0.8
				cols: 3

				Button:
					id: button7
					text: "7"
					on_release:
						root.add_numb(button7)
				Button:
					id: button8
					text: "8"
					on_release:
						root.add_numb(button8)
				Button:
					id: button9
					text: "9"
					on_release:
						root.add_numb(button9)

				Button:
					id: button4
					text: "4"
					on_release:
						root.add_numb(button4)
				Button:
					id: button5
					text: "5"
					on_release:
						root.add_numb(button5)
				Button:
					id: button6
					text: "6"
					on_release:
						root.add_numb(button6)
				Button:
					id: button1
					text: "1"
					on_release:
						root.add_numb(button1)
				Button:
					id: button2
					text: "2"
					on_release:
						root.add_numb(button2)
				Button:
					id: button3
					text: "3"
					on_release:
						root.add_numb(button3)
				Widget
				Button:
					id: button0
					text: "0"
					on_release:
						root.add_numb(button0)

				Button:
					id: button_dot
					text: "."
					on_release:
						root.add_oper(button_dot)


			GridLayout:
				size_hint: 0.3, 0.8
				cols:2

				Button:
					id: button_slash
					text: "/"
					on_release:
						root.add_oper(button_slash)
				Button:
					id: button_bs
					text: "BS"
					on_press:
						root.on_state(button_bs)
					on_release:
						root.backspace(button_bs)
				Button:
					id: button_star
					text: "*"
					on_release:
						root.add_oper(button_star)
				Widget
				Button:
					id: button_minus
					text: "-"
					on_release:
						root.add_oper(button_minus)
				Widget
				Button:
					id: button_plus
					text: "+"
					on_release:
						root.add_oper(button_plus)
				Button:
					id: button_res
					text: "="
					on_release:
						root.result(button_res)

	
	



	
